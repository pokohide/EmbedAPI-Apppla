<body style="margin: 0; padding: 0">
  <div class="post-item">

    <div class="image-wrapper">
      <a href='https://www.appp.la/posts/<%= post.slug %>?ref=embed' target='_blank'>
        <img src='https://lotsapp-pro.s3.amazonaws.com/uploads/post/image/<%= post.id %>/<%= post.image %>' height='100' />
      </a>
    </div>

    <div class="content-wrapper">
      <h2 class="post-name">
        <a href='https://www.appp.la/posts/<%= post.slug %>?ref=embed' target='_blank'>
          <%= post.name %>
        </a>
      </h2>

      <div class="post-desc">
        <%= post.description.substring(0, 80) %>
      </div>

      <p class="post-tags">
        <span class="post-tag">
          <a href='https://www.appp.la/c/<%= post.category_name_en %>?ref=embed' target='_blank'>
            <%= post.category_name %>
          </a>
        </span>
      </p>
    </div>

    <div class="comment-box">
      <a href='https://www.appp.la/posts/<%= post.slug %>?ref=embed' target='_blank' class='uk-button'>
        <i class='fa fa-comment-o'></i>
        <span><%= post.comments_count %></span>
      </a>
    </div>

    <div class="like-box">
      <a href='https://www.appp.la/posts/<%= post.slug %>?ref=embed' target='_blank' class='uk-button'>
        <i class='fa fa-thumbs-o-up'></i>
        <span><%= post.likes_count %></span>
      </a>
    </div>
  </div>
</body>
